class Solution {
    public int longestConsecutive(int[] nums) {
        int n=nums.length;
        Arrays.sort(nums);
        int c=1;
        int ans= 1;
        if(n==1){
            return 1;
        }
        if(n>1){
        for(int i=0;i<n-1;i++){
            if(nums[i]==nums[i+1]){
                continue;
            }
            else if((nums[i+1]-1)==nums[i]){
                c++;
            }
            else{
                c=1;
            }
            ans=Math.max(ans,c);
        }
        return ans;
        }
        else{
            return 0;
        }
    }
}
