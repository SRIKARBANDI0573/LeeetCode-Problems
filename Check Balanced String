#include <stdio.h>
#include <string.h>
bool isBalanced(char *num) {
    int even=0, odd= 0;
    int len=strlen(num);
  
    for (int i=0;i<len; i++) {
        int digit = num[i] - '0';
        if (i % 2 == 0) {
            even+=digit;
        } else {
            odd+=digit;
        }
    }
    
    return even==odd;
}
 
