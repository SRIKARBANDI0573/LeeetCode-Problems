class Solution {
    public int minRemoval(int[] nums, int k) {
     int n=nums.length;
        Arrays.sort(nums);
        int c=0;
       for(int i=0;i<n;i++){
        int p1=0;
        int p2=n-1;
           int d=i;
             while(p1<=p2){
                int mid=(p1+p2)/2;

                 if(nums[mid]<=(long)nums[i]*k){
                    d=mid;
                     p1=mid+1;
                 }
                else{
                    p2=mid-1;
                    
                }
            }
             c=Math.max(c,d-i+1);
        }
        return n-c;
    }
}
