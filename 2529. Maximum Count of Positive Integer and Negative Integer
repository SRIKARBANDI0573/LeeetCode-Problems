class Solution {
    public int maximumCount(int[] nums) {
        int n = nums.length ;
        int c = 0;
        int d = 0;
        int ans = 0;
        for(int i = 0; i < n; i++){
            if(nums[i] == 0){
                continue;
            }
            else if(nums[i] < 0){
                c++;
            }
            else{
                d++;
            }
        }
        ans=Math.max(c,d);
        return ans;
    }
}
